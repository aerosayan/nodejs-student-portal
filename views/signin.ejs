<body>

  <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <!-- CONTAINER STARTS HERE -->
  <div class="container">
    <div class="row">
      <div class="u-full-width" style="margin-top: 15%">
        <h2 id="welcome"><strong>Sign in page</strong></h2>
        
      </div>
    </div>
    
    
    
    <!-- The above form looks like this -->
<form method="post" autocomplete="off" style="margin-bottom:0px;">
  <div class="row centered ">
    <div class="twelve columns">
	  
      <label for="emailInput" >Your email</label>
      <input class="centered u-full-width mid-width" placeholder="test@mailbox.com" id="emailInput" type="email" name="email" required=true>
    </div>
  </div>
  <br>
  <div class="row centered">
	<div class="twelve columns ">
	  <label for="regis" >Registration Number</label>
	  <input class="centered u-full-width mid-width " placeholder="U13EX058" id="regis" name="registrationNumber" type="text" required=true>
	</div>
  </div>
  <br>
  <div class="row centered">
	<div class="twelve columns">
	  <label for="pass">Password</label>
	  <input class="centered u-full-width mid-width" placeholder="********" id="pass" name="password" type="password" required=true>
	</div>
  </div>
  <br><br>
  
  <div class="centered">
  <input class="button-primary " value="Sign In" type="submit">
  </div>
</form>

<!-- Always wrap checkbox and radio inputs in a label and use a <span class="label-body"> inside of it -->

<!-- Note: The class .u-full-width is just a utility class shorthand for width: 100% -->






	<!-- Make sure that all centered buttons have their floats cleared using u-cf class
    	_______________________________________________ -->
	<section style="margin-top:0px;margin-bottom:0px;">
  	<small class="centered u-cf">don't have user account?  <a id="sign-up"  href="signup">Sign up</a> or <a id="return-home"
	class="link" href="return-home">return Home</a></small>
	
	</section>
          

  </div>
  <!-- CONTAINER ENDS HERE -->

